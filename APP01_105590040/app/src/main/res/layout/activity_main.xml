<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tw.edu.ntut.csie.app01_105590040.MainActivity">

    <TextView
        android:id="@+id/txtGrade"
        android:layout_width="wrap_content"
        android:layout_height="53dp"
        android:text="@string/grade"
        android:textSize="30sp"
        app:layout_constraintEnd_toStartOf="@+id/editInput"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

    <EditText
        android:id="@+id/editInput"
        android:layout_width="245dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:inputType="textPersonName|number"
        android:text="@string/input_grade"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/txtGrade"
        tools:layout_editor_absoluteY="9dp"
        tools:textSize="30sp" />

    <Button
        android:id="@+id/btnGradeTrans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="260dp"
        android:text="@string/btn_grade_trans"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/txtLevel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInput"
        app:layout_constraintVertical_bias="0.447" />

    <TextView
        android:id="@+id/txtLevel"
        android:layout_width="327dp"
        android:layout_height="wrap_content"
        android:text="@string/level"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnGradeTrans" />

</android.support.constraint.ConstraintLayout>
